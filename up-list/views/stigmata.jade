extends layout
block content
  link(rel="stylesheet", href="/stylesheets/stigmata.css")
  link(rel="stylesheet", href="/stylesheets/stigmata-sprites.css")
  //- link(rel="stylesheet", href="/dist/css/stigmata.min.css")
  #app
    #stigmata-selector
      .option.kiana(@click='select("kiana")')
        p 琪亚娜·卡斯兰娜
      .option.bronya(@click='select("bronya")')
        p 布洛妮娅·扎伊切克
      .option.theresa(@click='select("theresa")')
        p 德莉莎·阿波卡利斯
    #stigmata-container
      #stigmata
        .stigmata-icon(v-for='i in 14',
          :id='"icon-" + i',
          :class='i > 1 ? "disabled" : "selected"')
          .icon-ring
          .selected-ring
          .level {{ currentLevel[i-1] + '/' + levels[i - 1] }}
      #info
  script(src="/javascripts/vue.min.js")
  script(src="/javascripts/stigmata.js")
  //- script(src="/dist/js/stigmata.min.js")